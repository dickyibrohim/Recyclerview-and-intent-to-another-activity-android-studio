<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.dicky.resepku">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.app.dicky.resepku.MainActivity"
            android:label="Resep Masakan Lezat"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.app.dicky.resepku.DetailResepActivity"
            android:parentActivityName="com.app.dicky.resepku.MainActivity"
            android:label="Detail Resep">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="com.app.dicky.resepku.MainActivity"/>
        </activity>
    </application>

</manifest>